html
  font-size 100%
body
  margin auto 1px
  font-size 100%

html, body, p, h1, h2, h3, h4, h5, h6, span, label, input
  font-family: 'vagroundedlight' !important

.round-border
  border-radius 1000px

.input-round
  @extend .round-border
  border none
  color #b0b7b1
  margin 7px auto
  height 50px
  width 100%
  text-indent 10px
  &::-webkit-input-placeholder
    text-indent 10px
    -webkit-transition opacity 0.3s linear
  &:focus::-webkit-input-placeholder
    opacity 0

.form
  width 75%
  margin 5vh auto
  img
    width 60%

.button-green
  @extend .round-border
  border none
  background-color #a0be37
  color #fff
  padding 1rem 2vw
  font-size 1rem
  font-weight bold
  margin auto 1vw

.button-big-green
  @extend .button-green
  width 100%
  margin 0

.button-big-blue
  @extend .button-big-green
  background-color: #2a62bc

.button-pink
  @extend .round-border
  border none
  background-color #c8415f
  color #fff
  padding 1rem 2vw
  font-size 1rem
  font-weight bold
  margin auto 1vw

.button-orange
  border-radius 5px
  border none
  background-color #f9ae40
  color #fff
  padding 1rem 2vw
  font-size 1rem
  font-weight bold

.p-grey-text
  color #5e5a6f

.entry-content
  margin 5vh 1vw 10vh 1vw

span.icheck
  width 25px
  height 25px
  background-color #a0be37
  display block
  border-radius 1000px
  padding 1px 5px
  cursor pointer
  color: #fff
  font-weight bold
  &.square
    border-radius 3px
    width 40px
    height 50px
    padding 10px 12px
    font-size 20px
  &.small-square
    border-radius 3px
    background white
    border 1px solid lightgrey
    display block
    &.true
      i
        color #a0be37
        background #a0be37
    &.false
      i
        color #fff
        background #fff

  i
    margin 0
    color white
  &.off
    background-color #fff
    border 1px solid #a0be37
    color: #a0be37
  &.false
    background-color #fff
    border 1px solid lightgrey
    color #a0be37
    i
      color grey

.instruction
  color #b3b3b3

.sidebar
  padding-right 0
  border-right 3px solid whitesmoke
  h4
    cursor pointer
    padding: 2vh 1vw;
    margin: 0;
    a
      color black
      &:hover
        color black
    &.base
      transition 1s
      &.true
        background linear-gradient(to right, #fab145, #feedd3)
    &.active
      background linear-gradient(to right, #fab145, #feedd3)

.controller
  margin 2vh 1vw

.color-white
  color #ffffff

.color-pink
  color #c8415f

.color-green
  color #a0be37

td.function
  cursor pointer
  &:hover
    color: #a0be37

.entry-content
  margin 0

.light-green
  background #D6E69E

.no-margin-horizontal
  margin-left 0 !important
  margin-right 0 !important
.no-margin-vertical
  margin-top 0 !important
  margin-bottom 0 !important

.banner
  padding 15px

.background-yellow
  background #faaf40
.background-pink
  background #c8415f
  border 1px solid #c8415f
  color: #fff
.background-black
  background #2f2f2f
  border 1px solid #2f2f2f
  color: #fff

.btn-transparent
  margin 5px
  background-color transparent
  &.green
    border 1px solid #a0be37
    color #a0be37
  &.pink
    border 1px solid #c8415f
    color #c8415f
  &.yellow
    border 1px solid #faaf40
    color #faaf40
  &.black
    border 1px solid #4d4d4d
    color #4d4d4d

.screen-header
  margin-bottom 30px

.popup-wrapper
  width 100%
  height 100%
  position absolute
  top 0
  z-index 100
  .popup
    background white
    border-radius 5px
    border 1px solid lightgrey
    padding 30px


.input-green
  background #a0be37
  color white
  font-weight bold
  cursor pointer
  &.true
    background #a0be37 !important
  &.false
    background white
    color #a0be37